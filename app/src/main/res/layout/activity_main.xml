<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favorite Contacts"
        android:textSize="18sp"
        android:textAlignment="center"
        android:lineSpacingExtra="8sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--====================================================================================-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sofia"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1Call"
                    android:layout_weight="1"
                    android:onClick="onClickButtonCall"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:text="Message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1sms"
                    android:onClick="onClickButtonSMS"
                    android:layout_weight="1"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

        </LinearLayout>
        <!--====================================================================================-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mom"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2Call"
                    android:layout_weight="1"
                    android:onClick="onClickButtonCall" />

                <Button
                    android:text="Message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2sms"
                    android:onClick="onClickButtonSMS"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
        <!--====================================================================================-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dad"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3Call"
                    android:layout_weight="1"
                    android:onClick="onClickButtonCall" />

                <Button
                    android:text="Message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3sms"
                    android:onClick="onClickButtonSMS"
                    android:layout_weight="1"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

        </LinearLayout>
        <!--====================================================================================-->
    </LinearLayout>

</LinearLayout>